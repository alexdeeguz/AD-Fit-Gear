<!DOCTYPE html>
<html>
  <head>
    <title>AdFitGear</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.logoURL = "<%= image_url('logo.png') %>";
      window.userURL = "<%= image_url('profile.svg') %>";
      window.searchURL = "<%= image_url('search.svg') %>";
      window.cartURL = "<%= image_url('cart.svg') %>";
    </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
